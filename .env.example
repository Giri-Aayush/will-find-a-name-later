# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# GitHub (for repos requiring authenticated API access)
GITHUB_PAT=ghp_your_personal_access_token

# CryptoPanic — free API key from https://cryptopanic.com/developers/api/
CRYPTOPANIC_API_KEY=

# Pipeline Configuration
# PIPELINE_ENV: "dev" = Ollama (local, free) | "prod" = GPT-4.1 Mini (OpenAI, paid)
PIPELINE_ENV=dev
PIPELINE_VERSION=0.1.0
LOG_LEVEL=info
DRY_RUN=false
BATCH_SIZE=200
CONCURRENCY=1

# OpenAI — required when PIPELINE_ENV=prod
OPENAI_API_KEY=

# Web App — PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Clerk Auth (for saved cards)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Sentry Error Monitoring (optional — leave blank to disable)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
